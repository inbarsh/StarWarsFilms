body
  font-family Arial, sans-serif

.container
  max-width 1140px
  margin 0 auto

.header
  border-bottom 2px solid #081c24
  display flex
  justify-content space-between
  align-items center
  padding 0 40px
  margin-bottom 30px

.home-img
  max-width 150px
  margin 5px 0

.search
  border 1px solid #081c24
  border-radius 7px
  width 270px
  height 35px
  padding 1px 0 0 10px
  &::placeholder
    color #081c24
    font-size 16px
  &:active, &:focus
    outline none 
    border 1px solid #01d277
    font-size 16px

.footer
  text-align center
  border-top 2px solid #081c24
  padding 20px
  margin-top 100px